<div class="account-pages my-3 pt-sm-2">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8 col-lg-6 col-xl-5">
                <div class="text-center mb-4">
                    <h1 style="color: #0190f3">Zolo</h1>
                    <p class="text-muted mb-4">Đăng nhập tài khoản Zolo <br>
                        để kết nối với ứng dụng Zolo Chat</p>

                </div>

                <div class="card mt-4">
                    <div class="card-body p-4">
                        <div class="p-3">
                            <form action="login-register/login" method="POST">
                                {{#if message}}
                                <div class="alert alert-danger text-center">{{message}}</div>
                                {{/if}}
                                {{#if success}}
                                <div
                                    class="alert alert-success text-center d-flex align-items-center justify-content-center">
                                    {{success}} <i class="far fa-arrow-alt-right fs-18 px-2"></i></div>
                                {{/if}}
                                <div class="alert alert-danger text-center" style="display: none"
                                    id="showNotificationLogin"></div>
                                <div class="mb-3">
                                    <label class="form-label fs-18" for="phone">Số điện thoại</label>
                                    <div class="input-group mb-3 bg-soft-light rounded-3">
                                        <span class="input-group-text text-muted" id="basic-addon3">
                                            <i class="fal fa-mobile"></i>
                                        </span>
                                        <input type="text" name="phone" id="phone"
                                            class="form-control form-control-lg border-light bg-soft-light"
                                            placeholder="Nhập số điện thoại" aria-label="Nhập số điện thoại"
                                            aria-describedby="basic-addon3"
                                            style="background-image: url(&quot;data:image/png;base64,&quot;); background-repeat: no-repeat; background-attachment: scroll; background-size: 16px 18px; background-position: 98% 50%;">
                                    </div>
                                </div>

                                <div class="mb-4">
                                    <div class="float-end">
                                        <a href="/accounts/password/reset" class="text-muted font-size-13">Quên mật
                                            khẩu?</a>
                                    </div>
                                    <label class="form-label fs-18" for="password">Mật khẩu</label>
                                    <div class="input-group mb-3 bg-soft-light rounded-3">
                                        <span class="input-group-text text-muted" id="basic-addon4">
                                            <i class="fal fa-lock-alt"></i>
                                        </span>
                                        <input type="password" id="password" name="password"
                                            class="form-control form-control-lg border-light bg-soft-light"
                                            placeholder="Nhập mật khẩu" aria-label="Nhập mật khẩu"
                                            aria-describedby="basic-addon4"
                                            pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}"
                                            title="Must contain at least one number and one uppercase and lowercase letter, and at least 8 or more characters"
                                            required
                                            style="background-image: url(&quot;data:image/png;base64,&quot;); background-repeat: no-repeat; background-attachment: scroll; background-size: 16px 18px; background-position: 98% 50%;">

                                    </div>
                                </div>

                                <div class="form-check mb-4">
                                    <input type="checkbox" class="form-check-input" id="remember-check">
                                    <label class="form-check-label" for="remember-check">Ghi nhớ</label>
                                </div>

                                <div class="d-grid">
                                    <button id="btnLogin"
                                        class="btn btn-main-reset waves-effect waves-light form-submit"
                                        type="submit">Đăng nhập</button>
                                </div>

                            </form>
                        </div>
                    </div>
                </div>

                <div class="mt-5 text-center">
                    <p>Bạn chưa có tài khoản ? <a href="/accounts/signup" class="fw-medium text-primary"> Đăng ký
                            tại đây </a>
                    </p>
                    <p>©
                        <script>document.write(new Date().getFullYear())</script> - App Zalo.
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- end account-pages -->
