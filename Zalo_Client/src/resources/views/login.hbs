<div class="main main-img fs-14">
    <form action="login-register/login" method="POST" class="form" id="form-2">
        <h3 class="heading">Đăng nhập</h3>
        <p class="desc">Chatting Together ❤️</p>

        <div class="spacer"></div>

        <div class="form-group">
            <label for="phone" class="form-label">Số điện thoại</label>
            <input id="phone" name="phone" type="text" class="form-control fs-14">
            <span class="form-message"></span>
        </div>

        <div class="form-group">
            <label for="password" class="form-label">Mật khẩu</label>
            <input id="password" name="password" type="password" placeholder="Nhập mật khẩu" class="form-control fs-14">
            <span class="form-message"></span>
        </div>

        {{#if errors}}
        {{errors}}
        {{/if}}

        <button class="form-submit">Đăng nhập</button>
        <div class="form-group mt-2">
            <span><a href="#" class="text-decoration-none">Quên mật khẩu</a></span>
            <span>Bạn chưa có tài khoản<a href="#" class="text-decoration-none"> Đăng ký ngay</a></sp>
        </div>
    </form>


</div>