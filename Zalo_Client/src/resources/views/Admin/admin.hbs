                    </div>
                    <img src="http://egret-react.ui-lib.com/assets/images/illustrations/designer.svg" alt="QLND">
                </div>
                <div class="main-admin-btn-add">
                    <button type="button" class="main-admin-btn-add-"><i class="fas fa-users-medical"></i> &nbsp;Tạo tài
                        khoản</button>
                </div>

                <div class="main-admin-table-wrapper">
                    <table class="main-admin-table">
                        <thead class="main-admin-table-theaed">
                            <tr>
                                <th>Username</th>
                                <th>Số điện thoại</th>
                                <th>Giới tính</th>
                                <th>Trạng thái</th>
                                <th>Hành động</th>
                            </tr>
                        </thead>
                        <tbody class="main-admin-table-tbody">
                            {{#each listRoleByUser}}
                            <tr>
                                <td>{{this.userName}}</td>
                                <td>{{this.local.phone}}</td>
                                <td>{{this.gender}}</td>
                                <td>
                                    <div style="display: block; float: left;">
                                        {{#ifActive this.isActive}}
                                        <p class="status status-active" id="isActive-{{this._id}}">Active</p>
                                        {{/ifActive}}
                                        {{#ifBlock this.isActive}}
                                        <p class="status status-inactive" id="isBlock-{{this._id}}">Block</p>
                                        {{/ifBlock}}
                                    </div>
                                </td>
                                <td style="display: flex; float: left">
                                    <p class="action action-update action-block">
                                        <i class="fas fa-user-slash action-block-icon"
                                            onclick="showModalBlock('{{this._id}}')"></i>
                                    </p>
