<div class="account-pages pt-sm-3">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8 col-lg-6 col-xl-5">
                <div class="text-center mb-4">
                    <h4>Cập nhật thông tin</h4>
                </div>
                <div class="card">
                    <div class="card-body p-4">
                        <div class="alert text-center" id="showNotification" style="display: none;">
                        </div>
                        <div>
                            <form action="/accounts/password/updated" _lpchecked="1" method="POST" id="formInfo">
                                <input type="hidden" value="{{phone}}" name="phone">
                                <style>
                                    /* The message box is shown when the user clicks on the password field */
                                    #message {
                                        display: none;
                                        background: #f1f1f1;
                                        color: #000;
                                        position: relative;
                                        padding: 0 20px;
                                        margin-top: 10px;
                                        border-radius: 6px;
                                    }

                                    #message p {
                                        padding: 10px 35px;
                                        font-size: 18px;
                                    }

                                    /* Add a green text color and a checkmark when the requirements are right */
                                    .valid {
                                        color: green;
                                    }

                                    .valid:before {
                                        position: relative;
                                        left: -35px;
                                        content: "✔";
                                    }

                                    /* Add a red text color and an "x" icon when the requirements are wrong */
                                    .invalid {
                                        color: red;
                                    }

                                    .invalid:before {
                                        position: relative;
                                        left: -35px;
                                        content: "✖";
                                    }
                                </style>

                                <div class="mb-4">
                                    <label for="" class="pb-2 fs-14 text-white">Username</label>

                                    <div class="input-group bg-soft-light mb-3 rounded-3 form-control">
                                        <span class="input-group-text border-light text-muted" id="basic-addon7">
                                            <i class="fal fa-user"></i>
                                        </span>
                                        <input type="text" name="userName" id="username"
                                            class="form-control form-control-lg bg-soft-light border-light"
                                            placeholder="Nhập username" aria-label="Nhập username"
                                            aria-describedby="basic-addon7">
                                    </div>
                                </div>
                                <div class="mb-4">
                                    <label for="" class="pb-2 fs-14 text-white">Mật khẩu</label>

                                    <div class="input-group bg-soft-light mb-3 rounded-3 form-control">
                                        <span class="input-group-text border-light text-muted" id="basic-addon7">
                                            <i class="fal fa-lock-alt"></i>
                                        </span>
                                        <input type="password" name="password" id="passwordInfor"
                                            class="form-control form-control-lg bg-soft-light border-light"
                                            placeholder="Nhập mật khẩu" aria-label="Nhập mật khẩu"
                                            aria-describedby="basic-addon7"
                                            pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}"
                                            title="Must contain at least one number and one uppercase and lowercase letter, and at least 8 or more characters"
                                            required>

                                    </div>
                                </div>
                                <div class="mb-4">
                                    <label for="" class="pb-2 fs-14 text-white">Mật khẩu xác nhận</label>

                                    <div class="input-group bg-soft-light rounded-3 form-control">
                                        <span class="input-group-text border-light text-muted" id="basic-addon7">
                                            <i class="fal fa-lock-alt"></i>
                                        </span>
                                        <input type="password" name="passwordConfirm" id="passwordInforConfirm"
                                            class="form-control form-control-lg bg-soft-light border-light"
                                            placeholder="Nhập lại mật khẩu" aria-label="Nhập lại mật khẩu"
                                            aria-describedby="basic-addon7">

                                    </div>
                                </div>
                                <div class="mb-4">
                                    <span>
                                        <input type="checkbox" id="showPassword" class="cursor-point">
                                        <label for="showPassword" class="cursor-point" onclick="showPassword()"
                                            style="margin-left: 2px;">Hiển thị
                                            mật khẩu</label>
                                    </span>
                                </div>
                                <div id="message">
                                    <p class="text-center mb-0">Mật khẩu phải chứa những điều sau:</p>
                                    <p id="letter" class="invalid mb-0">1 <b>chữ cái</b> viết thường</p>
                                    <p id="capital" class="invalid mb-0">1 <b>chữ cái </b> viết hoa</p>
                                    <p id="number" class="invalid mb-0">1 <b>số</b></p>
                                    <p id="length" class="invalid mb-0">Ít nhất <b>8 ký tự</b></p>
                                </div>

                                <div class="d-grid pt-1">
                                    <button class="btn btn-main-reset waves-effect waves-light"
                                        type="submit">Lưu</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
                <div class="mt-3 text-center">
                    <p>Bạn đã có tài khoản ? <a href="/login-register" class="fw-medium text-primary"> Đăng nhập </a>
                    </p>
                    <p>©
                        <script>document.write(new Date().getFullYear())</script> - App Zalo.
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>
