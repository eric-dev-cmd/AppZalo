    <!-- Start Add Member -->
    <div class="admin-backdrop">
        <div class="admin-modal-btn-add">
            <header class="header">
                <h3>Tạo tài khoản</h3>
                <i class="far fa-times admin-header-close"></i>
            </header>
            <form action="">
                <div class="admin-modal-content">
                    <div class="input-wrapper input-wrapper-avatar">
                        <div class="wrapper">
                            <label for="admin-avatar" name="admin-upload-file">
                                <div class="image">
                                    <img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcRa81NT0cfFGI-geFewuerTzRtpcj-PalEsnA&usqp=CAU"
                                        alt="">
                                </div>
                            </label>
                        </div>
                        <input id="admin-avatar" type="file" name="myfile" hidden />
                    </div>
                    <div class="input-wrapper">
                        <div class="input-wrapper-item">
                            <input type="text" id="adminUsername" class="form__input" autocomplete="off"
                                placeholder="Trung Vinh" autofocus>
                            <label for="adminUsername" class="form__label">Username</label>
                        </div>
                        <div class="input-wrapper-item">
                            <input type="number" id="adminPhone" class="form__input" autocomplete="off"
                                placeholder="0987059059">
                            <label for="adminPhone" class="form__label">Số điện thoại</label>
                        </div>
                    </div>
                    <div class="input-wrapper">
                        <div class="input-wrapper-item">
                            <input type="date" id="adminBirthDay" class="form__input" autocomplete="off"
                                placeholder="03-Nov-2021">
                            <label for="adminBirthDay" class="form__label">Ngày sinh</label>
                        </div>
                        <div class="input-wrapper-item">
                            <input type="password" id="adminPassword" class="form__input" autocomplete="off"
                                placeholder="********">
                            <label for="adminPassword" class="form__label">Mật khẩu</label>
                        </div>
                    </div>
                    <div class="input-wrapper">
                        <div class="input-wrapper-item input-wrapper-item-radio">
                            <input type="radio" name="gender" id="gender-male" checked="true">
                            <label for="gender-male" class="gender-male">
                                <div class="dot"></div>
                                <span>Nam</span>
                            </label>
                            <input type="radio" name="gender" id="gender-female">
                            <label for="gender-female" class="gender-female">
                                <div class="dot"></div>
                                <span>Nữ</span>
                            </label>
                        </div>
                        <div class="input-wrapper-item">
                            <input type="password" id="adminConfirmPassword" class="form__input" autocomplete="off"
                                placeholder="********">
                            <label for="adminConfirmPassword" class="form__label">Xác nhận mật khẩu</label>
                        </div>
                    </div>
                </div>
                <footer class="actions">
                    <button class="action-btn action-btn-close " type="button">Đóng</button>
                    <button class="action-btn action-btn-reset " type="reset">Xoá trắng</button>
                    <button class="action-btn action-btn-save" type="button">Lưu</button>
                </footer>
            </form>
        </div>
    </div>
    <!-- End Add Member -->

    <!-- Start Update Member -->
    <div class="admin-backdrop-block">
        <div class="admin-modal-btn-block">
            <header class="header">
                <h3>Khoá tài khoản</h3>
                <i class="far fa-times admin-header-close admin-header-close-block"></i>
            </header>
            <form action="">
                <div class="admin-modal-content">
                    <p style="text-align: center;">Bạn chắc chắn muốn khoá tài khoản này?</p>
                </div>
                <footer class="actions" id="btn-block">
                    <button class="action-btn action-btn-close-block " type="button">Đóng</button>
                    <button class="action-btn action-btn-block" type="button">Block</button>
                </footer>
            </form>
        </div>
    </div>
